.circle
  border-radius 50%

.height-stretch
  min-height 100vh

.no-padding-y
  padding-top 0
  padding-bottom 0

.no-padding-x
  padding-right 0
  padding-left 0

.no-margin-y
  margin-top 0
  margin-bottom 0

.no-margin-x
  margin-right 0
  margin-left 0

.side-padding
  padding-right 1rem
  padding-left 1rem

hr,
div
  &.sp
    display block
    margin 0
    padding 0
    height 2rem
    border 0
    &.sp-xl
      height 4rem
    &.sp-l
      height 3rem
    &.sp-m
      height 2rem
    &.sp-s
      height 1rem
    &.sp-xs
      height 0.5rem
    &.sp-xxs
      height 0.25rem

