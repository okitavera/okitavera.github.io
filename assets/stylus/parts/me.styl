.article-index
  .article-item
    margin-bottom 2rem
    .container
      padding 0
      background-color black
      box-shadow 0 15px 30px 0 rgba(0, 0, 0, 0.11), 0 5px 15px 0 rgba(0, 0, 0, 0.08)
      transition 0.18s ease-out
      &:hover
        box-shadow 0 16px 35px 0 rgba(0, 0, 0, 0.27), 0 8px 20px 0 rgba(0, 0, 0, 0.15)
        transform translateY(-1rem)
    .row
      padding 2rem 1rem
      min-height 17rem
      &:hover
        transition 0.18s ease-out
      &.has-splash
        background-color rgba(black, 0.6)
        &:hover
          background-color rgba(black, 0.8)
          transition 0.18s ease-out
      *
        text-shadow 0px 3px 0px $colorDark[1]

.owo
  padding 1rem
  text-align center
  opacity 0
  &:hover
    opacity 1

.copyright
  padding-top 2rem
  text-transform uppercase
  letter-spacing 2px
  font-size 0.9rem
  .jumps a
    padding 2px 0.6rem
    color $colorLight[2]
    font-size 0.8rem

.post-credit-wrapper
  display flex
  align-items center
  .post-credit
    display inline-block
    padding-left 1em
    > *
      margin 0
      padding 0
      font-family $font_sans
    :first-child
      text-transform uppercase
      font-weight 700 !important
    :last-child
      color $colorDark[1]

.codeheader
  margin-top -0.5rem

.paper
  padding 5rem
  background-color $colorLight[0]
  font-size 1.1em
  &.paper-art
    overflow hidden
    border-radius 13px 13px 0 0
  .splash
    margin 0
    padding 0
    line-height 0
  .splash-credit
    position relative
    bottom 4rem
    display block
    text-align right
    opacity 0.8
    small
      display inline-block
      padding 0.5rem 2rem
      background-color rgba(black, 0.5)
      color $colorLight[1]
    a
      color $colorLight[1]
  &.paper-title
    padding-bottom 0
    h1,
    time
      margin 0
      padding 0
      text-transform uppercase
      font-weight bold
    h1
      max-width 90%
      font-size 4em
      font-size 5vw
      line-height 1.2
    time
      padding-left 0.1em
    &.no-art
      padding-top 3rem
      border-radius 13px 13px 0 0
  &.paper-article
    padding-bottom 0 !important
    border-radius 0 0 13px 13px
    h1,
    h2,
    h3,
    h4,
    h5,
    h6
      .direct-link
        position relative
        top -0.2em
        visibility hidden
        color lighten($colorAccent, 30%)
        font-size 0.8em
      &:hover > .direct-link
        visibility visible

@media screen and (max-width: $paperMaxWidth + 155px)
  .paper
    &.paper-art,
    &.paper-title.no-art
      border-radius 0

@media screen and (max-width: $flexTreshold + 200px)
  .paper
    padding 3rem

@media screen and (max-width: $flexTreshold + 100px)
  .paper
    padding 2rem

@media screen and (max-width: $flexTreshold)
  .paper
    padding 1rem

.ovlogo-canvas
  display block
  margin 0
  padding 1rem 0
  svg
    max-width 512px
    max-height auto
    width 100%
    height auto
    transform rotate(-10deg)
    .L1,
    .L2
      animation dash 2s cubic-bezier(0.6, 0.5, 0.8, 0.9) forwards
      stroke-dasharray 400
      stroke-dashoffset 400
      stroke $colorAccent
      stroke-opacity 1
    .L2
      animation dash 3s cubic-bezier(0.4, 0.9, 0.9, 0.8) forwards
      animation-delay 1.78s
      stroke-dasharray 544
      stroke-dashoffset 544
      stroke $colorLight[1]
    .LSHDW
      opacity 0
      fill 0

@keyframes dash
  to
    stroke-dashoffset 0

.friends
  .col
    text-align center
    a
      position relative
      display inline-block
      margin 1rem
      img,
      span
        position relative
        display block
        width 128px
        height 128px
      span
        position absolute
        top 0
        left 0
        border-radius 50%
        background-color rgba($colorDark[0], 0.5)
        opacity 0
        transition 0.2s ease-out all
      b
        position relative
        top calc(128px / 2 - 1rem)
        color $colorLight[2]
        text-transform uppercase
      &:hover
        span
          opacity 1

.backtotop
  position fixed
  right 5rem
  bottom 5rem
  visibility hidden
  width 3rem
  height 3rem
  border-radius 50%
  background $colorDark[2]
  box-shadow 0 0 10px 0 rgba(0, 0, 0, 0.11)
  color $colorLight[2]
  text-align center
  line-height 3rem
  opacity 0
  transition 0.2s ease-out all
  transform rotate(-90deg)

@media screen and (max-width: $flexTreshold)
  .backtotop
    right 1rem
    bottom 2rem
  .ovlogo-canvas
    svg
      max-width 100%
      max-height auto
      width 100%
      height auto
  header
    &.paper
      flex-direction row
      h1
        max-width 100%
        font-size 4em
        font-size 8vw
        line-height 1.2
  .start
    .row
      flex-direction row
