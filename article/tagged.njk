---
pagination:
  data: collections
  size: 1
  alias: tag
layout: plain.njk
renderData:
  title: Tagged “{{ tag }}”
permalink: /article/tags/{{ tag }}/
---
<div class="container legacy">
  <h1 class="text-thin"><b>POST</b>TAGS</h1>
  {% for _tag in collections.tags %}
    <a href="/article/tags/{{ _tag }}" class="button button-small{% if tag == _tag %}{% else %} button-outline{% endif %}">{{ _tag }}</a>
  {% endfor %}
  <hr class="sp">
  {% set articles = collections[ tag ] %}
  <div class="article-index">
    {% for post in articles | reverse %}
      <article>
        <time class="hashed text-uppercase text-dark text-smaller" datetime="{{ post.date | htmlDateString }}"><b>{{ post.date | readableDate }}</b></time><br/>
        <a href="{{ post.url | url }}">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
      </article>
      <div class="sp sp-xs"></div>
    {% endfor %}
  </div>
</div>
